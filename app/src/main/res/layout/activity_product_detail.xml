<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/headerpd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="22dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/btnBackpd"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nike Air Zoom Pegasus 36 Miami"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="40dp"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/PD1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/headerpd"
            >

            <ImageView
                android:layout_width="410dp"
                android:layout_height="253dp"
                android:layout_gravity="center"
                android:src="@drawable/product_image"
                />

            <RelativeLayout
                android:id="@+id/captionPD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

            <TextView
                android:id="@+id/txtproductname1"
                android:layout_height="wrap_content"
                android:text="Nike Air Zoom Pegasus 36 Miami"
                android:textColor="@color/darkblue"
                android:textStyle="bold"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_width="300dp"
                android:layout_margin="10dp" />

                <ImageButton
                    android:id="@+id/lovePD"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="5dp"
                    android:src="@drawable/love"
                    android:contentDescription="Love Button Product"/>

                <ImageView
                    android:id="@+id/starRate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_rating"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/txtproductname1"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:id="@+id/txtpicepd1"
                    android:layout_height="wrap_content"
                    android:text="$249,49"
                    android:textColor="@color/skyblue"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_below="@id/starRate1"
                    android:paddingLeft="10dp"
                    android:layout_width="300dp"
                    android:layout_margin="10dp" />
            </RelativeLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/Sizeselect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PD1"
            android:layout_marginTop="0dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/categoryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Size"
                android:textColor="@color/darkblue"
                android:textStyle="bold"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_below="@id/categoryLabel">

                <LinearLayout
                    android:id="@+id/categoryContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_marginTop="30dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginRight="10dp"
                        >

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/size1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/size65"
                            android:contentDescription="Size 6.5"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            android:padding="16dp"
                            android:background="?attr/selectableItemBackgroundBorderless" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginRight="10dp"
                        >

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/size2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/size7"
                            android:contentDescription="Size 7"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            android:padding="16dp"
                            android:background="?attr/selectableItemBackgroundBorderless" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginRight="10dp"
                        >

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/size3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/size75"
                            android:contentDescription="Size 7.5"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            android:padding="16dp"
                            android:background="?attr/selectableItemBackgroundBorderless" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginRight="10dp"
                        >

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/size4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/size8"
                            android:contentDescription="Size 8"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            android:padding="16dp"
                            android:background="?attr/selectableItemBackgroundBorderless" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginRight="10dp"
                        >

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/size5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/size85"
                            android:contentDescription="Size 8.5"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            android:padding="16dp"
                            android:background="?attr/selectableItemBackgroundBorderless" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginRight="10dp"
                        >

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/size6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/size9"
                            android:contentDescription="Size 9"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            android:padding="16dp"
                            android:background="?attr/selectableItemBackgroundBorderless" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>
        </FrameLayout>

    </RelativeLayout>
</ScrollView>