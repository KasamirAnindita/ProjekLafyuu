<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- Header Layout -->
        <RelativeLayout
            android:id="@+id/headerfav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="22dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/btnBackfav"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Favorite Product"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="40dp"
                />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/bannerfav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/headerfav"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@color/white"
            android:padding="5dp">
        </FrameLayout>

        <FrameLayout
            android:id="@+id/ProductDisplayfav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bannerfav"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:padding="0dp"
            >

            <GridLayout
                android:id="@+id/gridLayoutfav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:padding="5dp">

                <!-- Produk 1 -->
                <LinearLayout
                    android:id="@+id/productfav1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/border">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/categoryfav1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/image_productsfs"
                        android:contentDescription=""
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nike Air"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtPricefav1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$299,43"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/skyblue"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/discountfav1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="24% off"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/lightred"
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <!-- Produk 2 -->
                <LinearLayout
                    android:id="@+id/productfav2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/border">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/categoryfav2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/image_productsfs_1"
                        android:contentDescription=""
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tas Merah"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtPricefav2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$299,43"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/skyblue"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/discountfav2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="24% off"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/lightred"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <!-- Produk 3 -->
                <LinearLayout
                    android:id="@+id/productfav3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/categoryfav3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/image_productsfs_2"
                        android:contentDescription=""
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tas Cream"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtPricefav3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$299,43"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/skyblue"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/discountfav3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="24% off"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/lightred"
                        android:textStyle="bold"
                        />

                    <!-- Tambahkan komponen ImageView dan TextView untuk produk ketiga di sini -->
                </LinearLayout>

                <!-- Produk 4 -->
                <LinearLayout
                    android:id="@+id/productfav4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/categoryfav4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/image_productsfs_3"
                        android:contentDescription=""
                        android:padding="16dp"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nike Air"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/txtPricefav4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$299,43"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/skyblue"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/discountfav4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="24% off"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/lightred"
                        android:textStyle="bold"
                        />
                    <!-- Tambahkan komponen ImageView dan TextView untuk produk keempat di sini -->
                </LinearLayout>
            </GridLayout>
        </FrameLayout>
    </RelativeLayout>
</ScrollView>